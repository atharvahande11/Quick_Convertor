<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.numberconversionapplication">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/img"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img"
        android:supportsRtl="true"
        android:theme="@style/Theme.NumberConversionApplication"
        tools:targetApi="31">
        <activity
            android:name=".Hex_Oct"
            android:exported="false" />
        <activity
            android:name=".Dec_Oct"
            android:exported="false" />
        <activity
            android:name=".Dec_Hex"
            android:exported="false" />
        <activity
            android:name=".Bin_Oct"
            android:exported="false" />
        <activity
            android:name=".Bin_Hex"
            android:exported="false" />
        <activity
            android:name=".Encryption_Decryption_Page"
            android:exported="false" />
        <activity
            android:name=".Bin_Dec"
            android:exported="false" />
        <activity
            android:name=".Number_Conversion_Page"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>